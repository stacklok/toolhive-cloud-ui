{
  "name": "toolhive-cloud-ui",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "dev": "concurrently -n \"OIDC,Next\" -c \"blue,green\" \"pnpm oidc\" \"pnpm dev:next\"",
    "dev:next": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "oidc": "node dev-auth/oidc-provider.mjs",
    "generate-swagger": "tsx scripts/generate-swagger.ts",
    "generate-client": "pnpm run generate-swagger && openapi-ts",
    "generate-client:nofetch": "openapi-ts",
    "mock:server": "tsx src/mocks/server.ts"
  },
  "dependencies": {
    "better-auth": "1.4.0-beta.21",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "ajv": "^8.17.1",
    "json-schema-faker": "^0.5.6",
    "msw": "^2.12.2",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@hey-api/client-next": "0.5.1",
    "@hey-api/openapi-ts": "0.87.5",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.1",
    "@mswjs/http-middleware": "^0.10.2",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.0.0",
    "oidc-provider": "^9.5.2",
    "tailwindcss": "^4",
    "tsx": "4.20.6",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
